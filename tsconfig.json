{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "./lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["cypress", "node"],
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@icons/*": ["icons/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@decorators/*": ["decorators/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@store/*": ["store/*"],
      "@tests/*": ["tests/*"],
      "/*": ["/*"]
    }
  },
  "include": ["src", "svg.d.ts", "src/**/*"],
  "exclude": ["node_modules", "lib"]
}
